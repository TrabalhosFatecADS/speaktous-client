<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#67b6e9">


    <EditText
            android:layout_width="349dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtLogin"
            android:hint="Login" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:textColorHint="#fdae1e" android:textColorLink="#FFFFFF"
            android:theme="@style/StyledTilEditTextTheme"
            android:background="@drawable/layoutedit" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logoSpeak"/>
    <EditText
            android:layout_width="351dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtSenha" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:hint="Senha" android:layout_marginTop="16dp"
            android:textColorHint="#fdae1e" android:textColorLink="#FFFF"
            android:theme="@style/StyledTilEditTextTheme"
            app:layout_constraintTop_toBottomOf="@+id/edtLogin"
            android:background="@drawable/layoutedit"/>
    <Button
            android:text="Entrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnEntrar" android:layout_marginEnd="80dp" android:layout_marginRight="80dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edtSenha"
            android:background="@drawable/buttonstyle" android:textColor="#e9ae2e" android:textSize="20sp"/>
    <View
            android:id="@+id/dividerContaCadastrar"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="NÃ£o possui uma conta?"
            android:layout_width="190dp"
            android:layout_height="26dp"
            android:id="@+id/txtConta"
            android:textSize="18sp"
            android:layout_weight="1"
            app:layout_constraintEnd_toStartOf="@+id/dividerContaCadastrar"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp" android:layout_marginRight="2dp"/>
    <TextView
            android:text="Cadastre-se aqui!"
            android:layout_width="151dp"
            android:layout_height="26dp"
            android:id="@+id/txtCadastrar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" android:textSize="18sp"
            android:textColor="#e9ae2e"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/dividerContaCadastrar" android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp" android:visibility="visible"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="199dp" app:srcCompat="@mipmap/speaklogo"
            android:id="@+id/logoSpeak" android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>