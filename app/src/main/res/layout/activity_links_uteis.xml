<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LinksUteis"
        android:background="#67b6e9">

    <TextView
            android:text="Links Úteis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLinks" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/layoutedit" android:textSize="30dp"
            android:textStyle="bold" android:textColor="#000000" app:layout_constraintHorizontal_bias="0.0"
            android:gravity="center"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/iconex"
            android:id="@+id/btnSair"
            android:background="#00000000" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="3dp"/>

    <TextView
            android:text="Movimento Conte Comigo, Prevenção a Depressão:                  http://www.contecomigo.org.br/"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtConteudoVida"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/layoutedit" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#000000" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/txtLinks"/>

    <TextView
            android:text="Informações sobre prevenção do suicídio:     www.prevencaosuicidio.blog.br"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtConteudoSuicidio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/layoutedit" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#000000" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txtConteudoVida"
    />

    <TextView
            android:text="Transtornos mentais e dependência química:                 http://www.franciscajulia.org.br"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtConteudoQuimico"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/layoutedit" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#000000" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/txtConteudoSuicidio"/>

</android.support.constraint.ConstraintLayout>